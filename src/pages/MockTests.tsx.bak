// Base interface for common test properties
interface BaseTest {
  id: number;
  title: string;
  description: string;
  duration: string;
  attempts: number;
  subject: Subject;
  link: string;
  difficulty: Difficulty;
  language: Language;
  isPremium: boolean;
  lastUpdated: string;
  topics: string[];
  isNew: boolean;
  rating: number;
  category: string;
  author: string;
  completionRate: number;
  totalMarks: number;
  passingMarks: number;
  sections: string[];
}

// Interface for test listing (shows only question count)
interface MockTest extends Omit<BaseTest, 'questions'> {
  questions: number; // Just the count of questions
}

// Interface for test taking (includes full question details)
interface MockTestWithQuestions extends Omit<BaseTest, 'questions'> {
  questions: Question[]; // Full question objects
}

interface Question {
  id: number;
  question: string;
  options: string[];
  correctAnswer: number;
  explanation: string;
  marks: number;
  section: string;
}

interface Filters {
  subject: string[];
  difficulty: string[];
  language: string[];
  isFree: boolean;
}

