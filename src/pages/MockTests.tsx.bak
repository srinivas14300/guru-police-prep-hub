// Helper function to get subject color
const getSubjectColor = (subject: Subject | string) => {
  const colors: Record<string, string> = {
    'GK': 'bg-blue-100 text-blue-800',
    'Reasoning': 'bg-purple-100 text-purple-800',
    'Mathematics': 'bg-green-100 text-green-800',
    'Current Affairs': 'bg-red-100 text-red-800',
    'Telugu': 'bg-yellow-100 text-yellow-800',
    'Full Test': 'bg-indigo-100 text-indigo-800',
    'General Science': 'bg-pink-100 text-pink-800',
    'Aptitude': 'bg-teal-100 text-teal-800',
  };
  return colors[subject] || 'bg-gray-100 text-gray-800';
};

